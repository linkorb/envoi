#!/usr/bin/env php
<?php declare(strict_types=1);

foreach (array(__DIR__ . '/../../autoload.php', __DIR__ . '/../vendor/autoload.php', __DIR__ . '/vendor/autoload.php') as $file) {
    if (file_exists($file)) {
        $autoload = $file;
        break;
    }
}

require $autoload;
\Envoi\ConsoleFactory::create()->run();